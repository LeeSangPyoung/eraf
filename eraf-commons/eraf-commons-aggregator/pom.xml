                </dependency>
            </dependencies>
        </profile>

        <!-- ============================================ -->
        <!-- Full Profile: 모든 Starter 포함 -->
        <!-- ============================================ -->
        <profile>
            <id>full</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
                    <artifactId>eraf-starter-all</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
