                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>s3</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
                    <artifactId>eraf-starter-s3</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>elasticsearch</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
                    <artifactId>eraf-starter-elasticsearch</artifactId>
                </dependency>
