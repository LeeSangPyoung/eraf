                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>tcp</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
                    <artifactId>eraf-starter-tcp</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>notification</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
                    <artifactId>eraf-starter-notification</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>scheduler</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
                    <artifactId>eraf-starter-scheduler</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>statemachine</id>
            <dependencies>
                <dependency>
                    <groupId>com.eraf</groupId>
